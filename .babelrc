{
    "stage": 2,
    "loose": ["es6.modules", "es6.classes"],
    "ignore": [
      "build"
    ],

    "env": {
        "dev": {
            "plugins": ["react-transform"],
            "extra": {
                "react-transform": {
                    "transforms": [{
                        "transform": "react-transform-hmr",
                        "imports": ["react"],
                        "locals": ["module"]
                    },
                    {
                        "transform": "react-transform-catch-errors",
                        "imports": [
                            "react",
                            "redbox-react"
                        ]
                    }]
                }
            }
        }
    }
}
